#!/usr/bin/env bash
set -e
if [[ ! -d "/Users/chernand/src/me/learnings/golang/aoc2023" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/Users/chernand/src/me/learnings/golang/aoc2023")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/Users/chernand/src/me/learnings/golang/aoc2023" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/Users/chernand/src/me/learnings/golang/aoc2023/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/Users/chernand/src/me/learnings/golang/aoc2023/.envrc" "/Users/chernand/src/me/learnings/golang/aoc2023/.direnv"/*.rc
